<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="awsomethree.com.townkitchen.activities.DailyMenuActivity">

    <fragment
            android:id="@+id/map"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginBottom="20dp"
            />


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estimated delivery time"
            android:id="@+id/tvLabelEstDeliverTime"
            android:layout_below="@+id/map"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/tvEstDeliverTime"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/tvLabelEstDeliverTime"
            android:layout_alignTop="@id/tvLabelEstDeliverTime"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery location"
            android:id="@+id/tvLabelDeliverLocation"
            android:layout_below="@+id/tvLabelEstDeliverTime"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 N 1st St, San Jose"
            android:id="@+id/tvDeliveryLocation"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/tvLabelDeliverLocation"
            android:layout_alignTop="@id/tvLabelDeliverLocation"
            />
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refresh"
            android:id="@+id/btnRefresh"
            android:layout_below="@id/tvDeliveryLocation"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/tvEstDeliverTime"
            android:layout_toEndOf="@+id/tvEstDeliverTime"
            />

</RelativeLayout>
