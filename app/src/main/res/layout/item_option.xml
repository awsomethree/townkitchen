<?xml version="1.0" encoding="utf-8"?>
<it.gmariotti.cardslib.library.view.CardViewNative
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/carddemo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="12dp">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:id="@+id/ivFoodImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff2669c2"
        android:maxHeight="20dp"
        android:maxWidth="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Option"
        android:id="@+id/tvOptionName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivFoodImage"
        android:layout_toEndOf="@+id/ivFoodImage"
        android:textColor="#ff1622ff"
        android:paddingBottom="5dp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="desc"
        android:id="@+id/tvComment"
        android:ellipsize="end"
        android:layout_below="@+id/tvOptionName"
        android:layout_toRightOf="@+id/ivFoodImage"
        android:layout_alignBottom="@+id/ivFoodImage"
        android:layout_toEndOf="@+id/ivFoodImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="price"
        android:id="@+id/tvPrice"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibDown"
        android:src="@drawable/ic_action_down"
        android:layout_below="@+id/tvOptionName"
        android:layout_toLeftOf="@+id/tvItems"
        android:layout_toStartOf="@+id/tvItems"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tvItems"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:layout_alignTop="@+id/tvComment"
        android:layout_toLeftOf="@+id/ibUp"
        android:layout_toStartOf="@+id/ibUp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibUp"
        android:src="@drawable/ic_action_up"
        android:layout_alignTop="@+id/ibDown"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:clickable="true" />


</RelativeLayout>
</it.gmariotti.cardslib.library.view.CardViewNative>